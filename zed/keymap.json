// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle",
    },
  },
  {
    // "context": "(!(vim_mode==insert && vim_operator==none))",
    "bindings": {
      "cmd-e": "project_panel::ToggleFocus",
      "cmd-j": "terminal_panel::ToggleFocus",
      "cmd-b": "outline_panel::ToggleFocus",
      "cmd-g": "git_panel::ToggleFocus",
      // "cmd-r": "workspace::ToggleBottomDock"
      "cmd-r": "workspace::ToggleRightDock",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::NewTerminal",
      "cmd-l": "pane::ActivateNextItem",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      // "shift-enter": ["workspace::SendKeystrokes", "escape"],
      "shift-space": "editor::ShowCompletions",
    },
  },
  {
    "bindings": {
      "cmd-<": "zed::OpenSettings",
    },
  },
  {
    "bindings": {
      "cmd-,": "zed::OpenSettingsFile",
    },
  },
]
